@{
    ViewData["Title"] = "Cloud Computing Models";
}
<style>
    h1 {
        color: #2c3e50;
        border-bottom: 2px solid #3498db;
        padding-bottom: 10px;
    }

    h2 {
        color: #2980b9;
    }

